{% extends "AppBundle::layout.html.twig" %}
{% block title %}Logowanie{% endblock %}
{% block content %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('login_check') }}" method="post" class="form-signin">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <h2 class="form-signin-heading">{{ 'login.header'|trans }}</h2>
        <input type="text" name="_username" id="inputEmail" class="form-control" placeholder="{{ 'login.login'|trans }}"
               required autofocus>
        <input type="password" name="_password" id="inputPassword" class="form-control"
               placeholder="{{ 'login.password'|trans }}" required>
        <div class="checkbox">
            <label>
                <input type="checkbox" value="remember-me"> {{ 'login.remember_me'|trans }}
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'login.button'|trans }}</button>
    </form>
{% endblock %}
