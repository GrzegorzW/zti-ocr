{% extends "AppBundle::layout.html.twig" %}
{% block title %}{{ 'challenge.edit.header'|trans }}{% endblock %}
{% block content %}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'challenge.edit.header'|trans }}</h3>
                </div>
                <div class="panel-body">
                    {% form_theme form 'bootstrap_3_layout.html.twig' %}
                    {{ form_start(form) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.correctAnswer) }}
                    {{ form_row(form.description) }}
                    {% if form.vars.data.image %}
                        <img src="{{ form.vars.data.image.imagePath|imagine_filter('thumbnail') }}"
                             style="max-width: 100%"/>
                    {% endif %}
                    {{ form_row(form.image) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->

{% endblock %}
